/**index.wxss**/
.container {
  background: #efeded;
}
.banner {
  width: 100%;
}
.banner image {
  width: 100%;
  height: 230px;
}
.nav {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: #fff;
  width: 100%;
  padding: 10px 0px;
}
.nav .wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20px;
}
.nav image {
  width: 50px;
  height: 50px;
  border-radius: 50px;
}
.nav .tit{
  font-size: 12px;
}
.list {
  margin-top: 10px;
  width: 100%;
}
.block {
  background: #fff;
  margin-bottom: 10px;
  padding: 10px 0px;
}
.info {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  margin-left: 20px;
  margin-right: 20px;
}
.info .avatar {
  width: 40px;
  height: 40px;
  border-radius: 50px;
}
.info .detail {
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}
.info .name{
  font-size: 14px;
}
.info .time {
  font-size: 12px; 
}
.post {
  margin: 0 20px;
}
.post .content {
  font-size: 14px;
  margin: 5px 0px;
}
.post input {
  border: 1px solid #d9dbde;
  font-size: 14px;
  padding: 2px 5px;
}
.add {
  position: fixed;
  bottom: 20px;
  right: 10px;
  background: #fd790d;
  color: #fff;
  width: 40px;
  height: 40px;
  text-align: center;
  line-height: 40px;
  border-radius: 50%;
  font-size: 20px;
}