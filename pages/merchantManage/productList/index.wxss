.header {
  background: #fff;
  padding: 20rpx 30rpx;
  font-size: 32rpx;
  color: #666;
  text-align: center;
  color: #1a73e8;
}
.product {
  background: #fff;
  margin-top: 1px;
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 120rpx;
}
.product image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
}
.product .info {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  font-size: 30rpx;
  color: #666;
}
.product .detail {
  font-size: 34rpx;
  display: flex;
  flex-direction: row;
}
.action {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 30rpx;
  color: #666;
}
.title {
  display: block;
  width: 100rpx;
  flex-shrink: 0;
}
.action .update {
  width: 70rpx;
  text-align: right;
}
.action .delete {
  width: 70rpx;
  text-align: right;
}