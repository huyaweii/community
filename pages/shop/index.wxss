Page {
  background: #fff;
}

.container {
  width: 100%;
  display: flex;
  flex-direction: row;
  overflow: hidden;
}

.left_tabbar {
  width: 25%;
}

.right_content {
  width: 75%;
}

.left_tabbar_item {
  color: #333;
  font-size: 26rpx;
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
  border-bottom: 1rpx solid #fff;
}

.left_tabbar_list {
  background: #f7f7f7;
}

.left_tabbar .active {
  background: #fff;
  transition: all 0.5s;
  animation: show 0.5s;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

@-webkit-keyframes show {
  0% {
    opacity: 0;
    transform: rotateY(180deg);
  }

  100% {
    opacity: 1;
    transform: rotateY(360deg);
  }
}

@keyframes show {
  0% {
    opacity: 0;
    transform: rotateY(180deg);
  }

  100% {
    opacity: 1;
    transform: rotateY(360deg);
  }
}



.tab_panel {
  font-size: 26rpx;
}

.product {
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  border-top: 1px solid #efeded;
}
.product:last-of-type {
  border-bottom: 1px solid #efeded;
}
.product image {
  width: 140rpx;
  height: 140rpx;
  flex-shrink: 0;
}
.product .info {
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.product .nameWrapper {
  display: flex;
  flex-direction: column;
}
.product .nameWrapper span:first-of-type {
  font-size: 32rpx;
}
.product .nameWrapper span:last-of-type {
  color: #999;
}
.product .price {
  color: #f2a33b;
}
.number {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: flex-end;
  flex: 1;
}
.number .sub, .number .add {
  display: block;
  text-align: center;
  line-height: 30rpx;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  border: 1px solid #999;
  color: #999;
}
.number .val {
  display: block;
  width: 40rpx;
  margin: 0rpx 10rpx;
  text-align: center;
}
.cart {
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
  height: 100rpx;
  background: #fff;
  width: 100%;
  border-top: 1px solid #efeded;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  z-index: 9999;
}
.cart .cartInner {
  display: flex;
  flex-direction: row;
}
.cart .iconInner {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f2a33b;
  border-radius: 50%;
  margin-left: 20rpx;
  margin-top: -15rpx;
  position: relative;
}
.cart .cartInner .icon-cart {
  color: #fff;
}
.priceInner {
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
}
.priceInner span:first-of-type {
  color: #f2a33b;
}
.priceInner span:last-of-type {
  color: #999;
  font-size: 24rpx;
}
.submit {
  width: 200rpx;
  color: #fff;
  background: #f2a33b;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.count {
  width: 30rpx;
  height: 30rpx;
  font-size: 24rpx;
  color: #fff;
  background: #e0614c;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.modal {
  position: fixed;
  left: 0rpx;
  top: 0rpx;
  background: rgba(0, 0, 0, 0.7);
  width: 100%;
  height: 100%;
}
.modal .chooseProducts {
  position: fixed;
  left: 0rpx;
  bottom: 100rpx;
  width: 100%;
  background-color: #fff;
}
.modal .chooseProductWrap {
  max-height: 300rpx;
  overflow: scroll;
}
.chooseProducts .title {
  background: #efeded;
  padding: 16rpx 0rpx 16rpx 20rpx;
  font-size: 30rpx;
}
.chooseProduct {
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
}
.chooseProduct .number {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex: 0;
}
.chooseProduct .name {
  display: block;
  width: 100rpx;
  color: #333;
}
.chooseProduct .price {
  color: #f2a33b;
}
.call {
  background: #fff;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: fixed;
  right: 10px;
  bottom: 120rpx;
  box-shadow: 2rpx 2rpx 5rpx #999;
  display: flex;
  justify-content: center;
  align-items: center;
}
.icon-dianhua {
  font-size: 70rpx;
  color: #50a350;
}