page {
  background: #efeded;
}
.info {
  width: 100%;
  height: 420rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0rpx 40rpx;
  box-sizing: border-box;
}
.bgImage {
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 100%;
  height: 420rpx;
  background-size: cover; 
  background-position: center;
  z-index: 1;
}
.infoInner {
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 100%;
  height: 400rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  z-index: 3;
  padding-bottom: 20rpx;
}
.info .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}
.mask {
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 100%;
  height: 420rpx;
  background: rgba(255, 255, 255, 0.4);
  z-index: 2;
}
.info .nameAge {
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
}
.info .nameAge text{
  margin-left: 40rpx;
}
.info .userInfoBtn {
  font-size: 26rpx;
  border: none;
  background: none;
  outline: none;
  padding: 0 14rpx;
  line-height: 2.1;
}
.info .icon-denglu {
  font-size: 60rpx;
  color: #999;
  border-radius: 50%;
}
.info .loginWrap {
  display: flex;
  align-items: center;
  justify-content: center;
}
.listWrapper {
  width: 100%;
  margin-top: 30rpx;
}
.listWrapper .suggestion {
  margin-top: 30rpx;
}
.i-cell-group {
  margin-bottom: 1px;
}